generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  clerkId String  @unique
  email   String  @unique
  name    String?
}

model Product {
  id               Int              @id @default(autoincrement())
  title            String
  category         Category
  genre            String
  species          String
  price            Decimal          @db.Decimal(10, 2)
  countryOfOrigin  String
  locality         String
  geologicalPeriod GeologicalPeriod
  geologicalStage  String
  createdAt        DateTime         @default(now())
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

enum Category {
  TRILOBITE
  AMMONITE
  DENT
  COQUILLAGE
}

enum GeologicalPeriod {
  CAMBRIEN
  ORDOVICIEN
  SILURIEN
  DEVONIEN
  CARBONIFERE
  PERMIEN
  TRIAS
  JURASSIQUE
  CRETACE
  PALEOGENE
  NEOGENE
  QUATERNAIRE
}
